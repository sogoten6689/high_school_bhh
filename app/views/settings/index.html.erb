                  <div class="col-sm-6">
                    <div class="form-check">
                      <input class="form-check-input" id="update.information.basic.birthday"  name="update.information.basic.birthday" type="checkbox" <%= @basic_information_birthday.value == 't' ? 'checked' : '' %> >
                      <label class="form-check-label" for="update.information.basic.birthday" >Được phép sửa ngày sinh</label>
                    </div>
                    <div class="form-check">
                      <input class="form-check-input" id="update.information.basic.gender"  name="update.information.basic.gender" type="checkbox" <%= @basic_information_gender.value == 't' ? 'checked' : '' %> >
