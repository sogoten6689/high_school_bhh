<div class="login-box">
  <div class="login-logo">
    <a><b>THPT</b> Bình Hưng Hoà</a>
  </div>

  <div class="card">
    <div class="card-body login-card-body">
      <p class="login-box-msg">Đổi mật khẩu</p>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>
        <div class=" mb-3">
          <div class="field">
            <%= f.label :password, "Mật khẩu mới" %><br />
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em><br />
            <% end %>
            <%= f.password_field :password, autofocus: true, autocomplete: "new-password",  class: "form-control" %>
            </div>
          </div>
        <div class=" mb-3">
          <div class="field">
            <%= f.label :password_confirmation, "Xác nhận mật khẩu" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password",  class: "form-control"  %>
          </div>
        </div>

        <div class="actions">
          <%= f.submit "Đổi mật khẩu", class: "btn btn-primary btn-block" %>
        </div>
      <% end %>

<%= render "devise/shared/links" %>

    </div>

  </div>
</div>