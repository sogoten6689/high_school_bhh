<section class="content">
  <div class="container-fluid">
    <!-- Small boxes (Stat box) -->

    <div class="row">
      <div class="col-md-12">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
          <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
          </ol>
          <div class="carousel-inner">
            <div class="carousel-item active">
              <img class="d-block w-100" src="<%= image_path("/assets/img.png") %>" alt="First slide">
              <div class="carousel-caption d-none d-md-block text-primary">
                <h5 class="text-primary">THPT Bình Hưng Hoà</h5>
                <p class="text-dark">Xin chào <%= current_user.full_name %>!</p>
              </div>
            </div>
            <div class="carousel-item">
              <img class="d-block w-100" src="<%= image_path("/assets/img_2.png") %>" alt="Second slide">
              <div class="carousel-caption d-none d-md-block">
                <h5 class="text-primary">THPT Bình Hưng Hoà</h5>
                <p class="text-primary">Lễ khai giảng</p>
              </div>
            </div>
            <div class="carousel-item">
              <img class="d-block w-100" src="<%= image_path("/assets/img_1.png") %>" alt="Third slide">
              <div class="carousel-caption d-none d-md-block">
                <h5 class="text-primary">THPT Bình Hưng Hoà</h5>
                <p class="text-primary">Hoạt động ngoại khoá</p>
              </div>
            </div>
          </div>
          <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      </div>
    </div>

    <!-- /.row -->
    <!-- Main row -->
    <!-- /.row (main row) -->
  </div><!-- /.container-fluid -->
</section>