<div class="p-3">
    <form action="<%= statistics_path(:tab => @current_tab) %>" method="get">
        <%= csrf_meta_tags %>
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    </form>

    <div class="table-responsive">
        <table class="table table-hover">
            <th>
            
            </th>
        </table>
    </div>
    <%
=begin%>
 <nav aria-label="Page navigation example">
        <ul class="pagination">
            <li class="page-item" ng-click="previous()" ng-class="{'disabled': page == 1}">
                <a class="page-link" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
                <span class="sr-only">Previous</span>
                </a>
            </li>
            <li class="page-item" ng-repeat="p in [].constructor(total_pages) track by $index" ng-if="[0, 1, 2, page - 2, page - 1, page, page + 1, page + 2, total_pages - 3, total_pages - 2,  total_pages - 1].indexOf($index) !== -1" ng-class="{'active': $index + 1 == page}" ng-click="change_page($index + 1)">
                <a class="page-link">{{$index + 1}}</a>
            </li>
            <li class="page-item" ng-click="next()" ng-class="{'disabled': page == total_pages}">
                <a class="page-link" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
                <span class="sr-only">Next</span>
                </a>
            </li>
        </ul>
    </nav> 
<%
=end%>
</div>