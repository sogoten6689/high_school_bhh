
<div class="content container-fluid">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
        <div class="card">
          <div class="card-header">
            <h3 class="card-title">
              <%= 'Danh sách người dùng' %>
            </h3>
            <div class="card-tools">
              <%= link_to 'Nhập Lớp học Excel', import_student_class_path, class: "btn btn-info"%>
              <%= link_to 'Nhập Tài khoản Excel', import_student_path, class: "btn btn-warning"%>
              <%= link_to 'Tạo tài khoản', new_admin_user_path, class: "btn btn-primary"%>
            </div>
          </div>
          <!-- /.card-header -->
          <div class="card-body">
            <table class="table table-bordered">
              <thead>
              <tr>
                <th style="width: 10px">#</th>
                <th>
                  <%= 'Mã học sinh' %>
                </th>
                <th>
                  <%= 'Họ và tên' %>
                </th>
                <th>
                  <%= 'Tên' %>
                </th>
                <th>
                  <%= 'Ngày sinh' %>
                </th>
                <th>
                  <%= 'Nơi sinh' %>
                </th>
                <th>
                  <%= 'Dân tộc' %>
                </th>
                <th>
                  <%= 'Email' %>
                </th>
                <th>
                  <%= 'Thao tác' %>
                </th>
              </tr>
              </thead>
              <tbody>
              <% @users.each_with_index do |user, index| %>
                <tr>
                  <td>
                    <%= index + 1 %>
                  </td>
                  <td>
                    <%= user.student_code %>
                  </td>
                  <td>
                    <%= user.full_name %>
                  </td>
                  <td>
                    <%= user.name %>
                  </td>
                  <td>
                    <%= user.birthday %>
                  </td>
                  <td>
                    <%= user.province %>
                  </td>
                  <td>
                    <%= user.ethnicity %>
                  </td>
                  <td>
                      <%= user.email %>
                  </td>
                  <td class="text-center">
                    <%= link_to admin_user_path(user), class: "btn btn-info btn-sm" do %>
                      <i class="fas fa-eye"></i>
                    <% end %>

                    <%= link_to admin_user_path(user), class: "btn btn-warning btn-sm" do %>
                      <i class="fas fa-edit"></i>
                    <% end %>
                    <% if user.role != 4 %>
                      <%= link_to admin_user_path(user), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm"  do %>
                        <i class="fas fa-trash"></i>
                      <% end %>
                    <% end %>
                  </td>
                </tr>
              <% end %>
              </tbody>
            </table>
          </div>
          <!-- /.card-body -->
          <!--          <div class="card-footer clearfix">-->
          <!--            <ul class="pagination pagination-sm m-0 float-right">-->
          <!--              <li class="page-item"><a class="page-link" href="#">&laquo;</a></li>-->
          <!--              <li class="page-item"><a class="page-link" href="#">1</a></li>-->
