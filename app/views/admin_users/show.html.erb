
<div class="content container-fluid">
  <div class="container-fluid">

    <div class="row">
      <div class="col-md-3">

        <div class="card card-primary card-outline">
          <div class="card-body box-profile">
            <div class="text-center">
              <!--                        <img class="profile-user-img img-fluid img-circle" src="../../dist/img/user4-128x128.jpg" alt="User profile picture">-->
            </div>
            <h3 class="profile-username text-center">
              <%= @user.full_name %>
            </h3>
            <p class="text-muted text-center">
              <%= @user.student_code %>
            </p>
            <ul class="list-group list-group-unbordered mb-3">
              <li class="list-group-item">
                <b>Ngày sinh:</b> <a class="float-right">
                <%= @user.birthday %>
              </a>
              </li>
              <li class="list-group-item">
                <b>Dân tộc</b> <a class="float-right">
                <%= @user.ethnicity_name %>

              </a>
              </li>


              <li class="list-group-item">
                <b>Tôn giáo</b> <a class="float-right">
                <%= @user.religion_name %>
              </a>
              </li>
              <li class="list-group-item">
                <b>Nơi sinh</b> <a class="float-right">
                <%= @province.name if !@province.nil? %>
              </a>
              </li>
              <li class="list-group-item">
                <b>Quốc tịch</b> <a class="float-right text-uppercase">
                <%= @user.nationality %>
              </a>
              </li>

              <li class="list-group-item">
                <b>CCCD/CMND</b> <a class="float-right">
                <%= @user.identification_type_name %>
              </a>
              </li>

              <% if @user.identification? %>
                <li class="list-group-item">
                  <b>Mã CCCD/CMND</b> <a class="float-right">
                  <%= @user.identification %>
                </a>
                </li>
              <% end %>

              <% if @user.identifier_code? %>
                <li class="list-group-item">
                  <b>Mã định danh</b> <a class="float-right">
                  <%= @user.identifier_code %>
                </a>
                </li>
              <% end %>

              <% if @user.identification_type != 3 %>
                <li class="list-group-item">
                  <b>CCCD Chíp</b> <a class="float-right">
                  <%= @user.identification_chip == 1 ? "Đã đăng ký" : "Chưa đăng ký" %>
                </a>
                </li>

              <% end %>
            </ul>
            <% if current_user.role == 5 %>
              <div class="text-center">
                <%= link_to "Chỉnh sửa", edit_admin_user_path(@user.id), class: "btn btn-primary"%>
              </div>
            <% end %>
            <!--                      <a href="#" class="btn btn-primary btn-block"><b>Follow</b></a>-->
          </div>

        </div>

      </div>

      <div class="col-md-9">
        <div class="card">
