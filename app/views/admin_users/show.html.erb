                      <div class="col-sm-12">
                        <div class="form-group">
                          <label for="contact_province">Hộ khẩu thường trú</label>
                          <div>
                            <%= @user_contact.household_full_address %>
                          </div>
                        </div>
                      </div>
                      <div class="col-sm-12">
                        <div class="form-group">
                          <label for="contact_province">Địa chỉ liên hệ</label>
                          <div>
                            <%= @user_contact.contact_full_address %>
                          </div>
                        </div>
                      </div>
                      <div class="col-sm-12">
                        <div class="form-group">
                          <label for="contact_province">Số điện thoại liên lạc</label>
                          <div>
                            <%= @user_contact.show_phone_number %>
                          </div>
                        </div>
                      </div>
<!--                      <div class="col-sm-12 text-center">-->
                        <%#= link_to "Chỉnh sửa thông tin liên lạc", edit_admin_user_path(current_user.id), class: "btn btn-primary"%>
<!--                      </div>-->
                    </div>

                  </div>




                </div>

              </div>

              <div class="tab-pane" id="timeline">

